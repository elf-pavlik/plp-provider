<div about="{{id}}" typeof="{{j type}}" class="container">
  <div class="row">
    <div id="main" class="col-md-3">
      {{#if name}}
        <h1 property="name">{{name}}</h1>
      {{/if}}
      {{#if image}}
        <img property="image" src="{{image}}" />
      {{/if}}
    </div>
    {{#if description}}
      <div class="col-md-6">
        <p property="description">{{description}}</p>
      </div>
    {{/if}}
  </div>
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-4">
      {{#if present}}
        <div class="panel panel-default">
          <h2 class="panel-heading">
            <span class="glyphicon glyphicon-calendar"></span>
            present
          </h2>
          <ul rel="present" class="panel-body">
            {{#each present}}
            <li>
              <a typeof="{{j type}}" href="{{id}}"><span property="name">{{name}}</span></a>
            </li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </div>
    <div class="col-md-5">
      {{#if attendee}}
        <div class="panel panel-default">
          <h2 class="panel-heading">
            <span class="glyphicon glyphicon-calendar"></span>
            attendees
          </h2>
          <ul rel="attendee" class="panel-body">
            {{#each attendee}}
            <li>
              <a typeof="{{j type}}" href="{{id}}"><span property="name">{{name}}</span></a>
            </li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </div>
  </div>
  <footer>
    powered by open source
    <a typeof="SoftwareApplication" href="https://github.com/elf-pavlik/webprofiled">
      <span property="name">webprofiled</span>
    </a>
  </footer>
</div>
